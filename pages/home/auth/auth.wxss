.auth-content{
  position:fixed;
  bottom: 200rpx;
  left:0;
  width:750rpx;
  height:240rpx;
}
.auth-btn{
  display:flex;
  justify-content: center;
  align-items: center;
  width:670rpx;
  height:100rpx;
  margin:0 auto;
  margin-bottom:22rpx;
  padding:0;
  border-radius: 12rpx;
  font-size: 32rpx;
  line-height:66rpx;
  text-align: center;
  color:#fff;
}
.auth-btn image{
  width:50rpx;
  height:48rpx;
  margin-right:20rpx;
}
.bth-success{
  background-color:#DF0C13;
  border:1px solid #DF0C13;
}
.bth-fail{
  background-color:#f1f4f9;
  border:1px solid #DF0C13;
  color:#DF0C13;
}
.bth-other{
  background-color:#eee;
  border:1px solid #ccc;
  color:#323232;
}
/********** 微信手机授权 **********/
.avatar{
  width:180rpx;
  height:180rpx;
  margin:0 auto;
  margin-bottom: 30rpx;
  border: 2px solid #FD9776;
  border-radius: 50%;
  overflow: hidden;
}
.content {
  text-align: center;
  color:#fff;
}
.login-btn {
  margin: 70rpx 50rpx;
  background-color: #DF0C13;
  border-radius: 80rpx;
  font-size: 35rpx;
  color:#fff;
}

/********** 其他手机注册 **********/
.basic-section{
  display:flex;
  min-height:100rpx;
  border-bottom:1px solid #eee;
}
.basic-input-title{
  width:240rpx;
  height:100rpx;
  padding-left:50rpx;
  font-size: 32rpx;
  line-height: 100rpx;
}
.basic-input-desc{
  flex:1;
  height:70rpx;
  padding-top:30rpx;
  padding-right:50rpx;
  text-align: right;
  color:#777;
}