.box{
  padding-top:20rpx;
  margin-bottom:120rpx;
}
/********** 对话框基本样式 **********/
.msg{
  display:flex;
  /* align-items: center; */
  max-width:690rpx;
  margin:0 auto;
  margin-bottom: 16rpx;
  /* padding:20rpx; */
  overflow: hidden;
}
.msg-portrait{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.msg-portrait image{
  width:100%;
  height:100%;
}
.msg-desc{
  max-width:560rpx;
  padding:20rpx;
  background-color:#fff;
  border:1px solid #eee;
  border-radius: 16rpx;
  line-height:54rpx;
}

/********** 客户经理 **********/
.marager{
  justify-content: flex-start;
}
.marager .msg-desc{
  margin-left:20rpx;
}

/********** 用户 **********/
.customer{
  justify-content: flex-end;
}
.customer .msg-desc{
  margin-right:20rpx;
}

.msg-product{
  display:flex;
  justify-content: center;
  align-items: center;
  height:100rpx;
  margin-right: 20rpx;
  padding: 20rpx;
  background-color:#fff;
  border-radius: 12rpx;
}
.msg-product-image{
  width:160rpx;
  height:120rpx;
  border:1px solid #eee;
  border-radius: 12rpx;
  overflow: hidden;
}
.msg-product-image image{
  width:100%;
  height:100%;
}
.msg-product-desc{
  max-width:360rpx;
  padding:20rpx;
  background-color:#fff;
  line-height:54rpx;  
  white-space: wrap;
  line-clamp: 2;
  box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

/********** 顶部显示框 **********/
.popup{
  display:flex;
  /* width:610rpx; */
  height:120rpx;
  margin:0 auto;
  margin-bottom:20rpx;
  padding:20rpx;
  background-color:#fff;
  /* border:1px solid #eee;
  border-radius: 16rpx; */
  box-shadow: 0 5rpx 10rpx #ccc;
}
.popup-image{
  width:160rpx;
  height:120rpx;
  border-radius: 8rpx;
  box-shadow: 0 0 5rpx #eee;
}
.popup-image image{
  width:100%;
  height:100%;
}

.popup-introduce{
  width:520rpx;
  height:120rpx;
  margin-left:10rpx;
}
.popup-introduce-desc{
  margin-bottom:20rpx;
  line-height: 50rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.popup-introduce-send{
  display:flex;
  justify-content: flex-end;
  height:50rpx;
}
.popup-introduce-send view{
  padding:0 20rpx;
  border: 1px solid #FF3333;
  border-radius: 12rpx;
  font-size: 24rpx;
  line-height:50rpx;
  text-align: center;
  color:#FF3333;

}
.popup-introduce-send button{
  width:240rpx;
  height:40rpx;
  padding:6rpx 10rpx;
  background-color: #2a82e4;
  border-radius: 50rpx;
  line-height:40rpx;
  text-align: center;
  color:#fff;
}

/* 输入框 */
.dialog{
  position:fixed;
  bottom:0;
  left:0;
  display: flex;
  justify-content: center;
  align-items: center;  
  min-height:80rpx;
  max-height:188rpx;
  padding:0 20rpx;
  padding-bottom:20rpx;
  background-color:#f1f4f9;
}
.dialog-input{
  position:relative;
  width:550rpx;
  min-height:60rpx;
  margin-right:20rpx;
  padding-top:20rpx;
  background-color:#fff;
  border-radius: 24rpx;
  border:2px solid #eee;
  overflow: hidden;
}
.dialog-input textarea{
  /* position:absolute;
  bottom:-3rpx; */
  display:block;
  width:510rpx;
  min-height:60rpx;
  padding:0 20rpx;
  line-height:40rpx;
}
.dialog-send{
  width:140rpx;
  height:80rpx;
  background-color:#2a82e4;
  border-radius: 20rpx;
  line-height:80rpx;
  text-align: center;
  color:#fff;
}
