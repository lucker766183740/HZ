.person{
  display:flex;
  height:140rpx;
  padding-top:10rpx;
  padding-left:30rpx;
  margin-bottom:16rpx;
  box-shadow: 0 3rpx 8rpx #ccc;
}
.person-headImg{
  width:128rpx;
  height:128rpx;
  margin:0 30rpx;
  border-radius: 50%;
  overflow: hidden;
}
.person-headImg image{
  width:100%;
  height:100%;
}
.person-desc{
  padding-top:32rpx;
  padding-left:10rpx;
  font-size: 36rpx;
  line-height:48rpx;
}

.content{
  width:690rpx;
  margin:0 auto;
  margin-top:20rpx;
  background-color:#fff;
  border-radius: 20rpx;
}
.basic-section{
  display:flex;
  height:100rpx;
  border-bottom:1px solid #eee;
}
.basic-section-title{
  width:240rpx;
  height:100rpx;
  padding-left:50rpx;
  font-size: 32rpx;
  line-height: 100rpx;
}
.basic-section-desc{
  flex:1;
  height:100rpx;
  padding-right:50rpx;
  line-height: 100rpx;
  text-align: right;
}

.person-btn{
  width:690rpx;
  height:90rpx;
  margin:0 auto;
  margin-top:30rpx;
  background-color:#DF0712;
  border-radius: 12rpx;
  font-weight: bold;
  font-size: 32rpx;
  line-height: 90rpx;
  text-align: center;
  color:#fff;
}
.sign-out-btn{
  background-color:#fff;
  border:1px solid #DF0712;
  color:#DF0712;
}