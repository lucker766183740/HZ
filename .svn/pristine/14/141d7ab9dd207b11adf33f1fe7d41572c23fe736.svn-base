@import "../../css/icon.wxss";

/********** 客户经理-微名片 **********/
.manager-card-box{
  position:fixed;
  top:0;
  left:0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column;
  width:100%;
  height:100%;
  background-color:rgba(0,0,0,0.7);
  z-index:3;
}
.manager-card{
  position:relative;
  display:flex;
  flex-flow: column;
  width:690rpx;
  height:920rpx;
  margin:0 auto;
  padding:15rpx;
  background-color:#fff;
  border:1px solid #eee;
  border-radius: 12rpx;
  box-shadow: 0 5rpx 10rpx #ccc;
}
/* 头像 */
.manager-card-headImg{
  width:630rpx;
  height:475rpx;
  margin:45rpx 30rpx;
  border-radius: 12rpx;
  box-shadow: 5rpx 5rpx 10rpx #ccc;
  overflow: hidden;
}
.manager-card-headImg image{
  width:100%;
  height:100%;
}
/* 信息 */
.manager-card-detail{
  position:relative;
  width:410rpx;
  padding-top:26rpx;
  padding-left:60rpx;
  line-height:50rpx;
  /* text-align: right; */
}
.card-detail-bankname{
  font-size: 26rpx;
  line-height: 32rpx;
  /* text-align: right; */
}
.card-detail-name{
  /* position:absolute; */
  /* top:40rpx;
  left:10rpx; */
  /* padding-top:22rpx; */
  font-weight: bold;
  font-size: 48rpx;
  line-height:60rpx;
  text-shadow: 7rpx 5rpx 2rpx #ccc;
}
.card-detail-job{
  /* position:absolute; */
  /* top:95rpx;
  left:20rpx; */
  font-weight: bold;
  font-size: 26rpx;
  color:orange;
}
.card-detail-number,
.card-detail-phone,
.card-detail-wechat,
.card-detail-company{
  padding-left:50rpx;
  /* text-align: right; */
  /* background-position:375rpx 8rpx; */
}
.card-detail-number{
  background-size:35rpx;
}

/* 二维码 */
.manager-share{
  position: absolute;
  bottom: 80rpx;
  right:40rpx;
  width:240rpx;
  height:240rpx;
}
.manager-share image{
  width:100%;
  height:100%;
}
/* 按钮 */
.manager-btn-box{
  display:flex;
  justify-content: space-around;
  align-items: center;
  height:80rpx;
  margin-top:20rpx;
}
.manager-btn{
  display:flex;
  justify-content: center;
  align-items: center;
  width:300rpx;
  height:80rpx;
  border-radius: 12rpx;
  font-weight: bold;
  font-size: 34rpx;
  line-height: 80rpx;
  color:#fff;
}
.btn-cancel{
  background-color: #eee;
}
.btn-sure{
  background-color: #DF0813;
}
.manager-btn image{
  width:50rpx;
  height:44rpx;
  margin-right:16rpx;
}

.manager-card-canvas{
  margin:0 auto;
  /* border:1px solid #eee; */
}
