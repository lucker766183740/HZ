@import '/components/css/icon.wxss';
@import '/components/css/tabbar.wxss';

page{
  padding-bottom:100rpx;
  /* background-color:#eee; */
}
/********** 公共样式 **********/
.product-small-size{
  font-weight: 400;
  font-size: 28rpx;
  line-height:60rpx;
  text-align: center;
}
.product-big-size{
  /* font-weight: bold; */
  font-size: 48rpx;
  line-height:60rpx;
  text-align: center;
}
.product-title{
  display:flex;
  justify-content: space-between;
  align-items: center;
  padding:10rpx 0 10rpx 20rpx;
  font-size: 36rpx;
  line-height:70rpx;
}
.product-icon{
  width:40rpx;
  height:40rpx;
  margin-right:30rpx;
  transform:rotate(0deg);
  transition: 0.3s;
}
.product-icon-show{
  transform:rotate(90deg);
}
.product-content-show{
  transition: 0.3s;
}

