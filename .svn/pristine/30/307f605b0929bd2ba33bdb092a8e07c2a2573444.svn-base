@import "../../css/icon.wxss";

.box{
  position:fixed;
  top:0;
  left:0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column;
  width:100%;
  height:100%;
  background-color:rgba(0,0,0,0.7);
  z-index:3;
}
.canvas-box{
  position:relative;
  display:flex;
  flex-flow: column;
  width:690rpx;
  height:970rpx;
  margin:0 auto;
  padding:15rpx;
  background-color:#f1f4f9;
  border:1px solid #eee;
  border-radius: 12rpx;
  box-shadow: 0 5rpx 10rpx #ccc;
}

/* 按钮 */
.canvas-btn-box{
  display:flex;
  justify-content: space-around;
  align-items: center;
  height:80rpx;
  margin-top:20rpx;
}
.canvas-btn{
  display:flex;
  justify-content: center;
  align-items: center;
  width:300rpx;
  height:80rpx;
  border-radius: 12rpx;
  font-weight: bold;
  font-size: 34rpx;
  line-height: 80rpx;
  color:#fff;
}
.canvas-btn image{
  width:50rpx;
  height:44rpx;
  margin-right:16rpx;
}
.btn-cancel{
  background-color: #eee;
}
.btn-sure{
  background-color: #DF0813;
}
.canvas-section{
  margin:0 auto;
  background-color:#f1f4f9;
}