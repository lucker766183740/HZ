
page {
  background-color: #f1f1f1;
 }
 
 .inputRoom {
  width: 750rpx;
  height: 16vw;
  border-top: 1px solid #cdcdcd;
  background-color: #f1f1f1;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  z-index: 20;
 }
 .active{
   background-color: #DF0813 !important;

 }
 input {
  width: 68vw;
  height: 9.33vw;
  background-color: #fff;
  border-radius: 40rpx;
  margin-left: 2vw;
  padding: 0 3vw;
  font-size: 28rpx;
  color: #444;
 }
 .contact-btn{
   position: absolute;
   right: 20rpx;
 }
 .leftMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
 }
 .con-much{
   width: 7vw;
  position: absolute;
  right: 30rpx;   
 }
 .con-voice{
   width: 68vw;
   background-color: #fff;
   border: 1rpx solid #eee;
   position: absolute;
   z-index: 99;
   padding: 15rpx 25rpx;
   text-align: center;
   left: 93rpx;
   border-radius: 50rpx;
   color: #444;
 }
 .rightMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #96EB6A;
  margin-right: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
 }