.message{
  width:720rpx;
  margin:0 auto;
}
.msg-item{
  display:flex;
  height:130rpx;
  margin-bottom:10rpx;
  border-bottom:1px solid #eee;
  background-color:#fff;
}
.msg-item-img{
  width:84rpx;
  height:84rpx;
  margin-top:24rpx;
  margin-left:16rpx;
  border-radius: 50%;
  overflow: hidden;
}
.msg-item-img image{
  width:100%;
  height:100%;
}
.msg-item-name{
  flex:1;
  margin-left:40rpx;
  font-weight: bold;
  font-size: 36rpx;
  line-height: 130rpx;
}
.msg-item-date{
  margin-right:16rpx;
  line-height: 130rpx;
  color:#ccc;
}