@import "../css/icon.wxss";
.manager{
  margin-bottom:20rpx;
}
.manager-star-box{
  display:flex;
  justify-content: space-between;
  align-items: center;
  /* width:720rpx;
  margin:0 auto; */
  margin-bottom:20rpx;
  text-align: justify;
  flex-wrap: wrap;
}
.manager-star-box:after{
  content: '';
  width: 50%;
  border:1px solid transparent;
}
.manager-star{
  position:relative;
  display:flex;
  justify-content: center;
  align-items: start;
  width:340rpx;
  height:180rpx;
  margin:0 auto;
  margin-bottom:14rpx;
  padding:10rpx 10rpx 10rpx 20rpx;
  background-color:#fff;
  border-radius: 16rpx;
  box-shadow: 0 5rpx 10rpx #ccc;
}
.manager-star-headerimg{
  width:165rpx;
  height:165rpx;
  margin-top:10rpx;
  margin-right:10rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.manager-star-headerimg image{
  width:100%;
  height:100%;
}
.manager-star-desc{
  width:145rx;
  height:165rpx;
  font-size: 20rpx;
  color:#A9A9A9;
}
.manager-star-name{
  font-size: 32rpx;
  line-height:50rpx;
  color:#323232;
}
.manager-star-job{
  font-size: 24rpx;
  line-height:30rpx;
}
.manager-star-phone{
  margin-top:10rpx;
  padding-left:40rpx;
  background-position:0 8rpx;
  line-height:42rpx;
}
.manager-star-company{
  width: 100rpx;
  height: 50rpx;
  padding-left:48rpx;
  background-position:0 8rpx;
  line-height:50rpx;
  overflow: hidden;
}

/********** 客户经理-双排 **********/
.manager-double-container{
  display:flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  padding:20rpx;
  padding-top:0;
}
.manager-double-item{
  display:flex;
  align-items: center;
  width:318rpx;
  height:120rpx;
  margin-bottom:12rpx;
  padding:14rpx;
  background-color:#fff;
  border-radius: 12rpx;
  overflow: hidden;
}
.double-item-img{
  width:120rpx;
  height:120rpx;
  border-radius: 12rpx;
  overflow: hidden;
}
.double-item-img image{
  width:100%;
  height:100%;
}
.double-item-right{
  margin-left:14rpx;
  padding-top:10rpx;
  font-size: 24rpx;
  color:#aaa;
}
.double-item-name{
  margin-bottom:10rpx;
  font-weight: bold;
  font-size: 32rpx;
  line-height:42rpx;
  color:#323232;
}
.double-item-phone{
  margin-top:10rpx;
  font-size: 24rpx;
  line-height:50rpx;
  color: #bbb;
}
.double-item-score{
  position:relative;
  width:170rpx;
  height:40rpx;
}
.double-item-score image{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  z-index:1;
}
.double-item-score-bg{
  width:170rpx;
  height:40rpx;
  background-color:#ffc300;
}

/********** 客户经理-微名片 **********/
