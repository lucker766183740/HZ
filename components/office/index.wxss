  position:relative;
  display:flex;
  width:690rpx;
  height:140rpx;
  margin:0 auto;
  margin-top:120rpx;
  margin-bottom:12rpx;
  padding:15rpx;
  /* border:1px solid #eee; */
  background-color:#fff;
  border-radius: 12rpx;
  box-shadow: 0 5rpx 10rpx #ccc;
}
