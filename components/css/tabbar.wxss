
/********* 办理按钮 *********/
.btnsection{
  position:fixed;
  bottom:0;
  left:0;
  display:flex;
  justify-content: space-between;
  align-items: center;
  width:750rpx;
  height:100rpx;
  background-color:#fff;
  box-shadow: 0 -5rpx 10rpx #ccc;
  z-index:3;
}
.btnsection view{
  display:flex;
  justify-content: center;
  align-items: center;
  flex:1;
  font-size: 32rpx;
  line-height:100rpx;
}
.btnsection image{
  width:30rpx;
  height:30rpx;
  margin-right:12rpx;
}
.btnsection .btnsection-handle{
  background-color: #DF0812;
  color:#fff;
}
.btnsection .btnsection-border{
  flex:none;
  width:1px;
  height:40rpx;
  background-color:#e1e1e1;
}
.btnsection-share button{
  display:flex;
  justify-content: center;
  align-items: center;
  background-color:#fff;
  font-weight: 400;
}

/********** 分享按钮 **********/
.btn-box{
  position:fixed;
  bottom:136rpx;
  right:20rpx;
  width:80rpx;
  height:80rpx;
  padding:10rpx;
  background-color: #fff;
  border:1px solid #eee;
  border-radius: 12rpx;
  box-shadow: 0 5rpx 10rpx #ccc;
}

.share{
  width:80rpx;
  height:80rpx;
  padding:0;
  background-color:#fff;
}
.share image{
  width:60rpx;
  height:60rpx;
  margin-top:10rpx;
  margin-left:6rpx;
}


